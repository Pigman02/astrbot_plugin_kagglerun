{
  "kaggle_email": {
    "type": "string",
    "description": "Kaggle 登录邮箱",
    "obvious_hint": true
  },
  "kaggle_password": {
    "type": "string",
    "description": "Kaggle 登录密码",
    "obvious_hint": true
  },
  "default_notebook": {
    "type": "string",
    "description": "默认 Notebook 名称 (用于快速启动)",
    "hint": "在插件数据中添加过的名称"
  },
  "auto_stop_enabled": {
    "type": "bool",
    "description": "是否启用自动停止",
    "default": true
  },
  "auto_stop_timeout": {
    "type": "int",
    "description": "自动停止超时时间 (分钟)",
    "default": 60
  },
  "auto_start_enabled": {
    "type": "bool",
    "description": "是否启用关键词自动启动",
    "default": false
  },
  "auto_start_keywords": {
    "type": "list",
    "description": "触发自动启动的关键词列表",
    "default": [],
    "items": {
        "type": "string"
    }
  },
  "keep_running_keywords": {
    "type": "list",
    "description": "触发重置停止倒计时的关键词",
    "default": [],
    "items": {
        "type": "string"
    }
  }
}
